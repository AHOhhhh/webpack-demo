{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
  "moduleFileExtensions": ["js", "jsx", "json"],
  "collectCoverage": true,
  "coverageDirectory": "output/coverage/jest",
  "collectCoverageFrom": [
    "!**/output/**",
    "!webpack.config.js",
    "**/*.{js,jsx}"
  ],
  "coverageReporters": ["html"],
  "coverageThreshold": {
    "global": {
      "functions": 80,
      "statements": 80,
      "lines": 80,
      "branches": 80
    }
  }
}
